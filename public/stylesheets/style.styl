@import "whitespace-reset.css"
@import "mixins"

body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

main
  width: 80%
  min-width: 800px
  margin: 0 auto

a
  color: colors.font

ul
  list-style: none
  text-align: center
  
li
  display: inline-block
  width: 25%
  vertical-align: top
  padding: 10px
  padding-bottom: 50px
  box-sizing: border-box

.button
  background-color: colors.button_bg
  border: 1px solid colors.button_bd
  border-radius: 3px
  padding: 2px 10px
  width: 80%
  display: block
  text-align: center
  box-sizing: border-box
  margin: 0 auto
  
img
  width: 100%
  
figcaption
  text-align: left
  padding-bottom: 15px
  
h1
  font-size: 1.5em
  padding-bottom: 8px
  
h2
  font-size: 1.2em

h4
  font-size: .8em
  
h2
h3
h4
  padding-bottom: 5px