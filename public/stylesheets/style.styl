@import "whitespace-reset.css"
@import "mixins"

body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

header
  position: relative
  > h1
    font-size: 40px
    text-align: center
header,
main
  width: 80%
  min-width: 800px
  margin: 0 auto

#index
  a
    color: colors.font
    text-decoration: none
  ul
    list-style: none
    text-align: center 
  li
    display: inline-block
    width: 25%
    vertical-align: top
    padding: 10px
    padding-bottom: 50px
    box-sizing: border-box
  img
    width: 100% 
  figcaption
    text-align: left
    padding-bottom: 15px
  h1
    font-size: 1.5em
    padding-bottom: 8px
  > h1
    font-size: 2.5em
    font-weight: bold
    border-bottom: 2px solid #000;
    margin-bottom: 15px
  h2
    font-size: 1.2em
  h4
    font-size: .8em
  h2
  h3
  h4
    padding-bottom: 5px
  footer a.button
    width: 200px

#cart
  line-height: 30px
  label
    position: relative
    top: 6px
    float: right
    border: 2px solid #000
    border-radius: 3px
    padding: 0 4px
    cursor: not-allowed
  label[for="cart_toggle"]
    cursor: pointer
    &:hover
      background-color: #000
      color: #fff
  #items
    color: #fff
    visibility: hidden
    background-color: green
    padding: 5px 10px
    position: absolute
    top: 30px
    right: 0
    z-index: 2
  input:checked + #items
    visibility: visible
  span
    float: right
    padding-left: 20px
  li
    a
      margin-right: 8px
      font-size: 16px
      color: #b22
      text-decoration: none;
  h2
    float: right
    font-size: 16px
  
  
  

.button
  background-color: colors.button_bg
  border: 1px solid colors.button_bd
  border-radius: 3px
  padding: 2px 10px
  width: 80%
  display: block
  text-align: center
  box-sizing: border-box
  margin: 0 auto 10px auto
.button:hover
  background-color: #aaa
  color: #eee
.hidden
  display: none


label
  display: block
  margin-bottom: 10px
  font-size: 1.2em
input
  display: block
  width: 100%
  box-sizing: border-box
  border-radius: 4px
  height: 30px
  border: 1px solid gray
  font-size 1.15em
  padding-left: 5px
  margin-top: 5px
  &[type='submit']
    width: 50%
    min-width: 100px
    margin: 0 auto
    padding: 0
    font-weight: bold
    background: linear-gradient(to bottom, #ddd, #aaa)
    border: 2px solid gray
    height: 35px
    &:hover
      background: linear-gradient(to bottom, #aaa, #777)
      color: #ddd